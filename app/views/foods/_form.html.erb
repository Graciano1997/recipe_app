<section class="formSection">
  <%= form_with model:@food do |form| %>
    <%= form.text_field :name, placeholder:"Food's Name" %>
    <%= form.text_field :measurement_unit, placeholder:"Measurement unit" %>
    <%= form.number_field :price, placeholder:"Price", min:0, step:"any" %>
    <%= form.number_field :quantity, placeholder:"Quantity", min:0%>
    <%= form.submit "Create", class:"btnSubmit" %>
  <% end %>
</section>
